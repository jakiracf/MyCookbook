root = true

[*.{cs,csx}]
# C# language level & nullability
dotnet_style_require_accessibility_modifiers = for_non_interface_members:suggestion
dotnet_diagnostic.CS8618.severity = warning
dotnet_diagnostic.CS8602.severity = warning

# Prefer using var where obvious
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion

# Expression-bodied members where short
csharp_style_expression_bodied_methods = when_on_single_line:suggestion

# Private fields use _camelCase
dotnet_naming_rule.private_fields_with_underscore.symbols = private_fields
dotnet_naming_rule.private_fields_with_underscore.style = underscore_camel
dotnet_naming_rule.private_fields_with_underscore.severity = warning
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_style.underscore_camel.required_prefix = _
dotnet_naming_style.underscore_camel.capitalization = camel_case

# files end with newline; trim trailing whitespace
insert_final_newline = true
trim_trailing_whitespace = true
