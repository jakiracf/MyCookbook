{
"ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=mycookbook;Username=mycookbook;Password=mycookbook;Include Error Detail=true"
  },

  "App": {
    "Paging": {
      "MaxPageSize": 50
    },
    "Popularity": {
      "OnImport": 5,
      "OnView": 1
    },
    "Cache": {
      "ExternalSearchSeconds": 20
    }
  },

"ExternalApis": {
    "MealDb": {
      "BaseUrl": "https://www.themealdb.com/api/json/v1",
      "ApiKey": "1"
    }
  },
  
"MigrateOnStartup": true,
"SeedOnStartup": true,

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MyCookbook.Infrastructure.External.MealDb": "Information"
    }
  },
  "AllowedHosts": "*"
}
